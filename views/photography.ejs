<%- include("partials/header.ejs") %>

<div class="body">
    <section id="photography-page">
        <div>
            <div class="service-page-head">
                <h1 class="service-page-heading">Photographers</h1>
                <p class="service-page-text">Each special moment, captured through pristine lenses.</p>
            </div>
            <hr>
            <div class="service-content">
                <div class="services-container-fluid">
                    <ul>
                        <% photographers.forEach(function(photographer){%>
                            <% if(photographer.key > 1) { %>
                                <li>
                                    <div class="service-page-item">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <div>
                                                    <img class="service-page-image" src="images/Photography-Home-Image.jpg" alt="Sample Photography Picture">
                                                    <div class="attribution2">
                                                        <h6 class="light2">Photo by <a href="https://unsplash.com/@annajimenez">
                                                            Anna Jim√©nez Calaf</a> on <a href="https://unsplash.com/photos/0JnbLFcriM4">Unsplash</a></h6>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-9">
                                                <div class="service-name">
                                                    <h3><%=photographer.name%></h3>
                                                </div>
                                                <div class="service-description">
                                                    <p><%=photographer.description%></p>
                                                </div>
                                                <div class="service-buttons text-end">
                                                    <button class="service-btn btn btn-large">Inquire</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>  
                                </li>
                            <% } %>
                        <%  }) %>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include("partials/footer.ejs") %>