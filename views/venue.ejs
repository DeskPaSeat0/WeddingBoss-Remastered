<%- include("partials/header.ejs") %>

<div class="body">
    <section id="venue-page">
        <div>
            <div class="service-page-head">
                <h1 class="service-page-heading">Venues</h1>
                <p class="service-page-text">The ideal wedding needs a suitable venue.</p>
            </div>
            <hr>
            <div class="service-content">
                <div class="services-container-fluid">
                    <ul>
                        <% venues.forEach(function(venue){%>
                            <% if(venue.key > 1) { %>
                                <li>
                                    <div class="service-page-item">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <div>
                                                    <img class="service-page-image" src="images/Venue-Home-Image.jpg" alt="Sample Venue Picture">
                                                    <div class="attribution2">
                                                        <h6 class="light2">Photo by <a href="https://unsplash.com/@arshadpooloo">Arshad Pooloo</a> on <a href="https://unsplash.com/photos/GdwWrLHdwpw">Unsplash</a></h6>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-9">
                                                <div class="service-name">
                                                    <h3><%=venue.name%></h3>
                                                </div>
                                                <div class="service-description">
                                                    <p><%=venue.description%></p>
                                                </div>
                                                <div class="service-buttons text-end">
                                                    <button class="service-btn btn btn-large">Inquire</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>  
                                </li>
                            <% } %>
                        <%  }) %>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include("partials/footer.ejs") %>